<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list>
        <item>
            <shape>
                <solid android:color="@color/cyan"/>
                <corners android:radius="20dp"/>
            </shape>
        </item>
        <item
            android:bottom="5px"
            >
            <shape>
                <padding android:bottom="5dp"/>
                <gradient
                    android:startColor="@color/cyan"
                    android:endColor="@color/blue"
                    android:angle="270"/>
                <corners
                    android:radius="20dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="5dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
    </layer-list>
</item>

    <item android:state_pressed="false">
    <layer-list>
        <item>
            <shape>
                <solid android:color="@color/blue"/>
                <corners android:radius="20dp"/>
            </shape>
        </item>
        <item
            android:bottom="5px"
            >
            <shape>
                <padding android:bottom="5dp"/>
                <gradient
                    android:startColor="@color/blue"
                    android:endColor="@color/cyan"
                    android:angle="270"/>
                <corners
                    android:radius="20dp"/>
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="5dp"
                    android:bottom="10dp"/>
            </shape>
        </item>
    </layer-list>
    </item>
</selector>